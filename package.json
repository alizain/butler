{
	"name": "butler",
	"license": "UNLICENSED",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "vite preview",
		"biome": "./node_modules/.bin/biome check --write",
		"sign": "zip -r archive.zip . -i $(git ls-files) && ./node_modules/.bin/web-ext sign --channel=listed --source-dir=./dist --upload-source-code=./archive.zip --amo-metadata=./amo.metadata.json && rm archive.zip",
		"deploy": "npm run build && npm run sign"
	},
	"dependencies": {
		"@fontsource-variable/plus-jakarta-sans": "^5.2.5",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.17",
		"solid-js": "^1.9.5",
		"tailwindcss": "^4.0.17",
		"tailwindcss-animate": "^1.0.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/firefox-webext-browser": "^120.0.4",
		"@types/node": "^22.13.14",
		"typescript": "~5.7.2",
		"vite": "^6.2.0",
		"vite-plugin-solid": "^2.11.2",
		"web-ext": "^8.5.0"
	}
}
